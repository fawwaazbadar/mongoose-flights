<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/destinations/new.css">
  
<%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>
  <p>Please first assure that the Destination is not in the dropdown</p>
  <select>
    <% destinations.forEach(function(destination){ %>
    <option><%= destination.airport %></option>
    <% }) %>
    </select>

  <form action="/destinations" method="POST">    
    <label>Destination:</label>
    <input type="text" name="airport">
    <button type="submit">Add Destination</button>
  </form>  
</main>
